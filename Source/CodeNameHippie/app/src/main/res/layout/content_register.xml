<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#737272"
            android:fillViewport="false"
            android:focusableInTouchMode="false"
            android:scrollIndicators="left|top">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:padding="16dp"
		android:scrollIndicators="top"
		tools:context="com.pam.codenamehippie.ui.Register"
		tools:showIn="@layout/activity_register">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingLeft="40dp">
			<TextView
				android:id="@+id/tv_infoConnexion"
				android:layout_width="447dp"
				android:layout_height="wrap_content"
				android:text="INFORMATIONS DE CONNEXION"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#A1CC39"
				android:textSize="30sp" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Nom"
				android:textColor="#ffffff"
				android:textSize="20sp"
				android:layout_gravity="center_horizontal|left" />
			<EditText
				android:id="@+id/etInscriptionNom"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="NOM"
				android:inputType="textPersonName"
				android:nextFocusForward="@+id/etInscriptionPrenom"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Prénom"
				android:textColor="#ffffff"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/etInscriptionPrenom"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="PRÉNOM"
				android:inputType="textPersonName"
				android:nextFocusForward="@+id/etUsername"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:id="@+id/tvUsername"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Nom d&apos;utilisateur"
				android:textColor="#ffffff"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/etUsername"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="NOM D&apos;UTILISATEUR"
				android:inputType="text"
				android:nextFocusForward="@+id/etCourriel"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Courriel"
				android:textColor="#ffffff"
				android:textColorHint="#c6c6c6"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/etCourriel"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="COURRIEL"
				android:inputType="textEmailAddress"
				android:nextFocusForward="@+id/etPassword"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Mot de passe"
				android:textColor="#ffffff"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/etPassword"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="MOT DE PASSE"
				android:inputType="textPassword"
				android:nextFocusForward="@+id/etConfirmPassword"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="10dp"
				android:text="Confirmer mot de passe"
				android:textColor="#ffffff"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/etConfirmPassword"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/element"
				android:hint="CONFIRMER LE MOT DE PASSE"
				android:imeOptions="actionDone"
				android:inputType="textPassword"
				android:padding="10dp"
				android:textColorHint="#c6c6c6" />
			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingTop="20dp"
				android:text="ÊTES-VOUS ?"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#A1CC39"
				android:textSize="20sp" />
			<RadioGroup
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<RadioButton
					android:id="@+id/rbParticulier"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:buttonTint="#ffffff"
					android:checked="false"
					android:paddingBottom="10dp"
					android:paddingLeft="5dp"
					android:paddingRight="15dp"
					android:paddingTop="10dp"
					android:text="Un particulier"
					android:textColor="#ffffff"
					android:textSize="15sp" />
				<RadioButton
					android:id="@+id/rbEntreprise"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:buttonTint="#ffffff"
					android:checked="false"
					android:paddingBottom="10dp"
					android:paddingLeft="5dp"
					android:paddingRight="15dp"
					android:paddingTop="10dp"
					android:text="Une entreprise"
					android:textColor="#ffffff"
					android:textSize="15sp" />
				<RadioButton
					android:id="@+id/rbOrganisme"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:buttonTint="#ffffff"
					android:checked="false"
					android:paddingBottom="10dp"
					android:paddingLeft="5dp"
					android:paddingRight="15dp"
					android:paddingTop="10dp"
					android:text="Un organisme"
					android:textColor="#ffffff"
					android:textSize="15sp" />
			</RadioGroup>
			<Button
				android:id="@+id/bLogin"
				android:layout_width="300dp"
				android:layout_height="40dp"
				android:layout_marginTop="30dp"
				android:background="@drawable/button"
				android:onClick="soummettreLaConnexion"
				android:text="Connexion" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>